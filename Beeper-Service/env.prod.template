# Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Domain for SSL (set your domain)
DOMAIN=your-domain.com

# MQTT Configuration
MQTT_BROKER_URL=mqtt://mosquitto:1883
MQTT_USERNAME=beeper-service
MQTT_PASSWORD=your-strong-mqtt-password-here
MQTT_CLIENT_ID=beeper-service-prod
MQTT_TOPIC_PREFIX=alerts
MQTT_QOS=1

# Sentry Configuration
SENTRY_WEBHOOK_SECRET=your-webhook-secret-from-sentry
SENTRY_ALLOWED_IPS=

# Production Logging
LOG_LEVEL=warn

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=30000
